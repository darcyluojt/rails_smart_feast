<!-- Container with responsive padding -->
<div class="container mx-auto px-4 py-8">
  <!-- Main heading with proper spacing and size -->
  <h1 class="text-3xl font-bold mb-6 .text-brand-green">Your upcoming meals</h1>

  <% if @meals.empty? %>
    <!-- Empty state with styled message and button -->
    <div class="text-center py-8">
      <p class="text-gray-600 mb-4">You have no upcoming meals</p>
      <%= link_to 'Plan your meals', root_path, data: { turbo: false }, class: "inline-block bg-brand-orange text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition duration-200" %>
    </div>
  <% else %>
    <!-- Responsive grid for meal cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mt-4">
      <% @meals.each do |meal| %>
        <!-- Individual meal card with shadow and hover effect -->
        <%= link_to meal do  %>
          <div class="relative bg-white rounded-lg shadow-md hover:shadow-lg transition duration-200">
            <div class="relative h-48">
              <%= image_tag meal.recipe.thumbnail,
                  class: "absolute inset-0 w-full h-full object-cover rounded-t-lg" %>
              </div>
            <h2 class="text-lg font-semibold text-gray-800 p-4 text-center">
              <%= meal.recipe.name %>
            </h2>
            <div class="absolute bottom-4 right-2">
              <%= link_to meal, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
                <i class="fa-solid fa-trash text-gray-400"></i>
              <% end %>
            </div>
          </div>
          <% end %>
      <% end %>
    </div>
  <% end %>

  <!-- Basket section -->
  <h2 class="text-2xl font-bold mt-12 mb-6 text-gray-800">Your basket</h2>
  <!-- Styled ordered list -->
  <ol class="list-decimal list-inside space-y-2 pl-4">
    <% @basket_items.each do |item| %>
      <li class="text-gray-700 hover:text-gray-900 transition duration-200">
        <%= item.ingredient.name %>
      </li>
    <% end %>
  </ol>
</div>
